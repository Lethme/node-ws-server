{
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es2017",
        ],
        "allowJs": false,
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}